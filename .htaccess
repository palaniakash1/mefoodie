RewriteEngine On
RewriteBase /

# --------------------------------------------------
# 1Ô∏è‚É£ Serve existing files inside /public/ directly
# --------------------------------------------------
RewriteCond %{REQUEST_URI} ^/public/
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# --------------------------------------------------
# 2Ô∏è‚É£ Default document
# --------------------------------------------------
Options -Indexes
DirectoryIndex index.php

# --------------------------------------------------
# 3Ô∏è‚É£ Custom 404 Error Page
# --------------------------------------------------
ErrorDocument 404 /404.php
